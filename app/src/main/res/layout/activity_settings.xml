<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.SettingsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Settings"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorTextwh"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Temperature"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>
        <RadioGroup
            android:id="@+id/tempgroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/c"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:button="@drawable/radiobtbg"
                android:background="@drawable/radiobtbg"
                android:checked="true"
                android:textColor="@color/colorTextwh"
                android:textAlignment="center"
                android:text="°C" />
            <RadioButton
                android:id="@+id/f"
                android:layout_width="50dp"
                android:button="@drawable/radiobtbg"
                android:background="@drawable/radiobtbg"
                android:textColor="@color/colorTextwh"
                android:textAlignment="center"
                android:text="°F"
                android:layout_height="35dp"/>
        </RadioGroup>
    </RelativeLayout>
    <Button
        android:id="@+id/changecity"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="0dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextwh"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text="Change city"
        android:background="@color/colorPrimary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="This application is an open source project. All weather information is provided by OpenWeatherMap."/>
</LinearLayout>
